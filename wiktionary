#!/bin/bash

# Shortcut to start up SemWiktionary
# Author: Matti Schneider-Ghibaudo

loading=0

if [[ $1 = "--load" ]]
then
	loading=1
fi

if java -cp $(dirname $0)/bin:$(dirname $0)/lib/*:$(dirname $0)/lib/neo4j_database/*:SemWiktionary_MattiSG.jar edu.unice.polytech.kis.semwiktionary.SemWiktionary "$@" # the jar is here for the built package, and bin for the actual project
then 
	if [[ $loading = 1 ]]
	then notify-send -u critical "Parsing succeeded" "SemWiktionary parsing succeeded!" 2> /dev/null || growlnotify -t "Parsing succeeded" -m "SemWiktionary parsing succeeded!" 2> /dev/null  # [Growl](http://growl.info/) is a notification system for OS X
	fi
else
	if [[ $loading = 1 ]]
	then notify-send -u critical "Parsing succeeded" "SemWiktionary parsing succeeded!" 2> /dev/null || growlnotify -t "Parsing failed" -m "SemWiktionary parsing failed  :(" -p High 2> /dev/null
	fi
fi
